<script type="text/javascript">
var volumeUp = function() {
  button = document.getElementById(this.id);
  audio = document.getElementById(this.id + "-audio");
  icon = document.getElementById(this.id + "-icon");
  input = document.getElementById(this.id + "-input");
  volume = document.getElementById(this.id + "-volume");

  volumeFix = Number(audio.volume.toFixed(1));

  if (audio.paused && (volumeFix >= 1 || volumeFix <= 0)) {
    audio.volume = 0.1;
    audio.play();
    icon.classList.remove("inactive-sound");
  } else if (!audio.paused && volumeFix >= 1) {
    audio.volume = 0;
    audio.pause();
    icon.classList.add("inactive-sound");
  } else {
    audio.volume = Number((volumeFix + 0.1).toFixed(1));
    audio.play();
    icon.classList.remove("inactive-sound");
  }

  if (audio.volume == 0) {
    input.value = "";
  } else {
    input.value = audio.volume * 100;
  }

  volume.innerHTML = input.value;
}

var volumeDown = function() {
  button = document.getElementById(this.id);
  audio = document.getElementById(this.id + "-audio");
  icon = document.getElementById(this.id + "-icon");
  input = document.getElementById(this.id + "-input");
  volume = document.getElementById(this.id + "-volume");

  volumeFix = Number(audio.volume.toFixed(1));

  if (audio.paused && (volumeFix >= 1 || volumeFix <= 0)) {
    audio.volume = 1;
    audio.play();
    icon.classList.remove("inactive-sound");
  } else if (!audio.paused && volumeFix <= 0.1) {
    audio.volume = 0;
    audio.pause();
    icon.classList.add("inactive-sound");
  } else {
    audio.volume = Number((volumeFix - 0.1).toFixed(1));
    audio.play();
    icon.classList.remove("inactive-sound");
  }

  if (audio.volume == 0) {
    input.value = "";
  } else {
    input.value = audio.volume * 100;
  }

  volume.innerHTML = input.value;
}

var buttons = document.getElementsByClassName("preset-button");
for (var i = 0; i < buttons.length; i++) {
  button = buttons[i];
  button.addEventListener("click", volumeUp);
  button.addEventListener("contextmenu", volumeDown);
  button.oncontextmenu = function() {
    return false;
  }
}

var pause = document.getElementById("pause-play");
var pausePlay = function() {
  media = document.getElementsByTagName("audio");
  for (var i = 0; i < media.length; i++) {
    audio = media[i];

    //FIX VOLUME

    input = document.getElementById(audio.id + "-input");

    volumeFix = Number(audio.volume.toFixed(1));

    if (audio.volume > 0) {
      if (!audio.paused) {
        audio.pause();
      } else {
        audio.play();

      }
    }
    input.value = audio.volume;
  }
}
pause.onclick = pausePlay;
</script>
