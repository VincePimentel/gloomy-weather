<script>
  var rainButton = document.getElementById("rain-button");
  var rainAudio = document.getElementById("rain-audio");
  var rainIcon = document.getElementById("rain-icon");
  var rainVolume = document.getElementById("rain-volume");
  rainButton.addEventListener("click", volumeUp);
  rainButton.addEventListener("contextmenu", volumeDown);
  rainButton.oncontextmenu = function() {
    return false;
  }

  function volumeDown() {
    if (rainAudio.volume == 1.00 && rainAudio.paused) {
      rainAudio.volume -= 0.25;
      rainAudio.play();
    } else if (rainAudio.volume == 0.00 && rainAudio.paused) {
      rainAudio.volume = 1.00;
      rainAudio.play();
    } else if (rainAudio.volume == 0.25) {
      rainAudio.volume -= 0.25;
      rainAudio.pause();
    } else {
      rainAudio.volume -= 0.25;
    }

    rainVolume.value = rainAudio.volume * 100;
  }

  function volumeUp() {
    if (rainAudio.volume == 1.00 && rainAudio.paused) {
      rainAudio.volume = 0.25;
      rainAudio.play();
    } else if (rainAudio.volume == 1.00) {
      rainAudio.volume = 0.00;
      rainAudio.pause();
    } else {
      rainAudio.volume += 0.25;
      rainAudio.play();
    }

    rainVolume.value = rainAudio.volume * 100;
  }
</script>
