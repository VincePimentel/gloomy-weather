<% if @presets.size == 0 %>
<div>
  <p class="text-center">
    Nothing to see here. Create <a href="/">one</a>!
  </p>
</div>
<% else %>
<table class="table">

  <thead>
    <tr>
      <th scope="col">ID</th>

      <% if @page_info[:title] == "All Presets" %>
        <th scope="col">User</th>
      <% end %>

      <th scope="col">Title</th>
      <th scope="col">Description</th>

      <% if @page_info[:title] == "My Presets" %>
        <th scope="col">Delete</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @presets.each do |preset| %>

      <tr>
        <th scope="row"><%= preset.id %></th>

        <% if @page_info[:title] == "All Presets" %>
          <td scope="col"><%= preset.user.username %></td>
        <% end %>

        <td><a class="text-white" href="/presets/<%= preset.id %>/<%= preset.slug %>"><%= preset.title %></a></td>
        <td><p class="text-white"><%= preset.description %></p></td>

        <% if @page_info[:title] == "My Presets" %>
        <td>
          <form class="" action="/presets/<%= preset.id %>" method="post">
            <input type="hidden" name="_method" value="DELETE">
            <button type="submit" class="btn"><i class="fas fa-trash text-danger"></i></button>
          </form>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>

</table>
<% end %>
